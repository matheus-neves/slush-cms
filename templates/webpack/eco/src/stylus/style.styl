@import 'kouto-swiss'
@import 'core/_vars'
@import 'core/_mixins'
@import 'core/font'
// @import 'sprite'

#<%= appName %>

  @import 'core/reset'
    
  margin 0 auto
  font-size 16px
  letter-spacing 1px
  line-height 1.2
  text-align center
  max-width 1024px

  .wrap
    padding 0 5%

    &--nopadding
      padding 0

  section
    width 300px
    padding 20px
    display block
    margin 0 auto
    box-shadow 0px 0px 5px rgba(0,0,0,0.5)


  img 
    size(250px)

  h1
    padding 30px
    font-size rem(34px)
    font-style italic

  h2
    padding 20px
    font-size rem(24px)
    font-weight bold
    color #933ec5

  li
    margin 8px 0

  a
    font-style italic
    color #933ec5


